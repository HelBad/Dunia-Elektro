<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".KapasitorRangkaian">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="match_parent"
                android:text="Cara Menghitung Nilai Kapasitor"
                android:textAlignment="center" />

            <ImageView
                android:src="@drawable/kapasitor1"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp" />

            <ImageView
                android:src="@drawable/kapasitor2"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="255dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp" />

            <ImageView
                android:src="@drawable/kapasitor3"
                android:layout_marginHorizontal="9dp"
                android:layout_marginTop="405dp"
                android:layout_width="wrap_content"
                android:layout_height="75dp" />

            <ImageView
                android:src="@drawable/kapasitor5"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="485dp"
                android:layout_width="wrap_content"
                android:layout_height="95dp" />

            <TextView
                android:id="@+id/linkk"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="585dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>